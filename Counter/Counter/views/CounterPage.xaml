<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Counter.models"
    x:Class="Counter.views.CountersPage"
    Title="Counter">

    <ContentPage.Resources>
        <models:HexToColorConverter x:Key="HexToColor" />
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Dodaj" Command="{Binding AddCommand}" />
    </ContentPage.ToolbarItems>

    <CollectionView ItemsSource="{Binding Items}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <SwipeView>
                    
                    <SwipeView.LeftItems>
                        <SwipeItems Mode="Reveal">
                            <SwipeItem Text="+1"
                         Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IncCommand}"
                         CommandParameter="{Binding .}" />
                            <SwipeItem Text="-1"
                         BackgroundColor="LightGray"
                         Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DecCommand}"
                         CommandParameter="{Binding .}" />
                        </SwipeItems>
                    </SwipeView.LeftItems>

                    
                    <SwipeView.RightItems>
                        <SwipeItems Mode="Reveal">
                            <SwipeItem Text="Delete"
                         BackgroundColor="IndianRed"
                         Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                         CommandParameter="{Binding .}" />
                        </SwipeItems>
                    </SwipeView.RightItems>

                    
                    <Frame Padding="12" Margin="8" CornerRadius="16"
                 BackgroundColor="{Binding ColorHex, Converter={StaticResource HexToColor}}">
                        <Grid ColumnDefinitions="*,Auto" >
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                                <Label Text="{Binding Value}" FontSize="14" TextColor="Black"/>
                            </VerticalStackLayout>
                            <Button Grid.Column="1"
                      Text="OtwÃ³rz"
                      Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenCommand}"
                      CommandParameter="{Binding .}" />
                        </Grid>
                    </Frame>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
