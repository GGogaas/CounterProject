<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Counter.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <Label
                x:Name="CounterBtn"
                Text=""
                Style="{StaticResource SubHeadline}"
                SemanticProperties.Description="Counter" />


            <Grid ColumnDefinitions="*,*" ColumnSpacing="4">
                <Button
                Grid.Column="0"
                Text="+" 
                SemanticProperties.Hint="Adds 1 to the counter"
                Clicked="PlusOne"
                VerticalOptions="Center"
                ></Button>

                <Button
                Grid.Column="1"
                Text="-" 
                SemanticProperties.Hint="Subtracts 1 from the counter"
                Clicked="MinusOne"
                VerticalOptions="Center"
                ></Button>



            </Grid>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
