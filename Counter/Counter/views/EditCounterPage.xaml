<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Counter.models"
             x:Class="Counter.views.EditCounterPage"
             Title="EditCounterPage">
    <VerticalStackLayout Padding="20" Spacing="14">
        <Entry Placeholder="Nazwa licznika" Text="{Binding Item.Name}"/>

        <Frame HeightRequest="24" CornerRadius="6"
           BackgroundColor="{Binding Item.ColorHex, Converter={models:HexToColorConverter}}"/>

        <Button Text="ZmieÅ„ kolor" Command="{Binding PickColorCommand}" />

        <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
            <Button Text="-" Command="{Binding DecCommand}"/>
            <Label Grid.Column="1"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontAttributes="Bold"
                       FontSize="28"
                       Text="{Binding Item.Value}"/>
            <Button Grid.Column="2" Text="+" Command="{Binding IncCommand}"/>
            
        </Grid>

        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12" Margin="0,10,0,0">
            <Button Text="Save" Command="{Binding SaveCommand}"/>
            <Button Grid.Column="1" Text="Cancel" Command="{Binding CancelCommand}"/>
            <Button Grid.Column="2" Text="Reset" Command="{Binding ResetCommand}"/>


        </Grid>

    </VerticalStackLayout>
</ContentPage>